<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_pressed_gray"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="15dp"
    tools:context="cc.chenghong.huaxin.activity.BaseActivity">
    <!--选择医生-->
    <cc.chenghong.huaxin.view.RoundImageView
        android:id="@+id/iv"
        android:src="@color/white"
        android:layout_width="60dp"
        android:scaleType="center"
        android:layout_height="60dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:id="@+id/ll_name"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv"
            android:text="chenhua"
            android:textColor="@color/black"
            android:textSize="@dimen/app_text_size_20" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/iv_zj"
            android:layout_alignBottom="@+id/tv_name"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_name"
            android:background="@drawable/b_z" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_sc"
        android:layout_below="@+id/ll_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/iv"
        android:text="擅长骨科asdkjlfsadfjosighoiwqegiosadksag"
        android:textSize="@dimen/app_text_size_18" />

    <TextView
        android:id="@+id/tv_ks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="内分泌科"
        android:textColor="@color/black"
        android:textSize="@dimen/app_text_size_20" />


</RelativeLayout>
