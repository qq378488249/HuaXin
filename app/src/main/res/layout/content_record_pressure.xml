<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cc.chenghong.huaxin.activity.RecordPressureActivity"
    tools:showIn="@layout/activity_record_pressure">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="10dp">

            <TextView
                style="@style/tv_base"
                android:textColor="@color/gray"
                android:layout_weight="1"
                android:text="测量日期" />

            <TextView
                android:id="@+id/tv_date"
                android:text="1"
                android:textColor="@color/black"
                style="@style/tv_base" />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="15dp"
                android:layout_margin="5dp"
                android:background="@drawable/a_0020_" />
        </LinearLayout>

        <TextView style="@style/tv_line"></TextView>

        <LinearLayout
            android:id="@+id/ll_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="10dp">

            <TextView
                style="@style/tv_base"
                android:layout_weight="1"
            android:textColor="@color/gray"
                android:text="测量时间" />

            <TextView
                android:id="@+id/tv_time"
                android:textColor="@color/black"
                style="@style/tv_base" />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="15dp"
                android:layout_margin="5dp"
                android:background="@drawable/a_0020_" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_line4"
            style="@style/tv_line"
            android:visibility="gone"></TextView>

        <LinearLayout
            android:id="@+id/ll_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_left_4"
                style="@style/tv_base"
                android:textColor="@color/gray"
                android:layout_weight="1"
                android:text="测量时段" />

            <TextView
                android:id="@+id/tv4"
                android:textColor="@color/black"
                style="@style/tv_base" />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="15dp"
                android:layout_margin="5dp"
                android:background="@drawable/a_0020_" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_line3"
            style="@style/tv_line"></TextView>

        <LinearLayout
            android:id="@+id/ll_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv3"
                style="@style/tv_base"
                android:textColor="@color/gray"
                android:layout_weight="1"
                android:text="测量血压" />

            <TextView
                android:id="@+id/tv_pressure"
                android:textColor="@color/black"
                style="@style/tv_base" />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="15dp"
                android:layout_margin="5dp"
                android:background="@drawable/a_0020_" />
        </LinearLayout>

    </LinearLayout>
    <TextView
        style="@style/tv_line"></TextView>
    <TextView
        style="@style/tv_space" />
    <TextView
        style="@style/bt_red_white"
        android:id="@+id/bt"
        android:text="确定"
        android:padding="10dp"
        android:textColor="@color/red" />

</LinearLayout>
