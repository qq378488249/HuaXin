<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="cc.chenghong.huaxin.activity.XjblActivity"
    tools:showIn="@layout/activity_xjbl">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="标题"
        android:textSize="@dimen/app_text_size_20" />


    <EditText
        android:id="@+id/et_name"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="请输入标题"
        android:background="@drawable/shape_round_red_white"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="@dimen/app_text_size_20" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="时间"
        android:textSize="@dimen/app_text_size_20" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_round_gray_white"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="@dimen/app_text_size_20" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="上传病例图片"
        android:textSize="@dimen/app_text_size_20" />

    <TextView
        style="@style/tv_line"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp" />

    <cc.chenghong.huaxin.view.RoundImageView
        android:id="@+id/iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:visibility="gone"
        android:background="@drawable/jh" />

    <GridView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:horizontalSpacing="3dp"
        android:id="@+id/gv"
        android:layout_margin="3dp"
        android:numColumns="4"
        android:verticalSpacing="3dp"></GridView>


</LinearLayout>
