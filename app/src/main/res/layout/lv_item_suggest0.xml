<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    tools:context="cc.chenghong.huaxin.activity.BaseActivity"
    tools:showIn="@layout/activity_base2">
    <!-- 健康预警-->
    <TextView
        android:id="@+id/tv1"
        style="@style/tv_base"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dp"
        android:text="血压" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            style="@style/tv_line_vertical"
            android:layout_gravity="center_horizontal" />

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp" />

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv2"
                    style="@style/tv_base"
                    android:layout_width="180dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ti"
                    android:gravity="center"
                    android:textSize="@dimen/app_text_size_15"
                    android:text="2016-03-11 14:50"
                    android:textColor="@color/black" />

                <TextView style="@style/tv_space" />

                <ImageView
                    android:id="@+id/iv_delete"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/selector_iv_suggest0" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="80dp"
                android:text="血压"
                android:textColor="@color/black"
                android:textSize="@dimen/app_text_size_18" />

            <TextView
                style="@style/tv_line"
                android:layout_marginBottom="20dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv3"
            style="@style/tv_base"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="很高" />
    </FrameLayout>

</LinearLayout>
