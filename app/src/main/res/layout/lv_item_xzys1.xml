<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_pressed_gray"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp"
    tools:context="cc.chenghong.huaxin.activity.BaseActivity">
    <!--选择医生-->
    <cc.chenghong.huaxin.view.RoundImageView
        android:id="@+id/iv"
        android:layout_width="60dp"
        android:layout_marginTop="5dp"
        android:layout_height="60dp"
        android:layout_gravity="top"
        android:layout_marginRight="10dp"
        android:scaleType="center"
        android:src="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="changchangchang"
                android:textColor="@color/black"
                android:textSize="@dimen/app_text_size_20" />

            <ImageView
                android:id="@+id/iv_zj"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:background="@drawable/b_z" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_ks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="心血管内科、内分泌科"
            android:textColor="@color/black"
            android:textSize="@dimen/app_text_size_20" />

        <TextView
            android:id="@+id/tv_sc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_name"
            android:layout_marginTop="10dp"
            android:text="阿萨德"
            android:textSize="@dimen/app_text_size_18" />
    </LinearLayout>


</LinearLayout>
