<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_round_gray_white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="头像上传"
            android:id="@+id/tv_title"
            android:textSize="@dimen/app_text_size_20"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="20dp"
            android:id="@+id/iv_cancel"
            android:padding="10dp"
            android:background="@drawable/b_0012"
            android:layout_height="20dp" />
    </LinearLayout>
    <TextView
        style="@style/tv_line" />
    <LinearLayout
        android:layout_width="300dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="1dp"
            android:layout_weight="1"
            android:id="@+id/ll_left"
            android:padding="20dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="50dp"
                android:id="@+id/iv_left"
                android:src="@drawable/b_0011"
                android:layout_height="40dp" />
            <TextView
                android:layout_width="wrap_content"
                android:text="拍照上传"
                android:id="@+id/tv_left"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/app_text_size_20"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            style="@style/tv_line_vertical" />
        <LinearLayout
            android:layout_width="1dp"
            android:layout_weight="1"
            android:id="@+id/ll_rigth"
            android:gravity="center"
            android:padding="20dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="50dp"
                android:id="@+id/iv_rigth"
                android:src="@drawable/b_0010"
                android:layout_height="40dp" />
            <TextView
                android:layout_width="wrap_content"
                android:text="相册上传"
                android:id="@+id/tv_rigth"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/app_text_size_20"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>