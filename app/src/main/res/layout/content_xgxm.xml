<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:showIn="@layout/activity_xgxm" tools:context="cc.chenghong.huaxin.activity.XgxmActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:text="姓名"
            android:textSize="@dimen/app_text_size_20"
            android:textColor="@color/black"
            android:id="@+id/tv"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:gravity="bottom"
            android:paddingBottom="10dp"
            android:text="mmol/L"
            android:textColor="@color/black"
            android:id="@+id/tva"
            android:visibility="gone"
            android:textSize="@dimen/app_text_size_15"
            android:layout_height="match_parent" />
    </LinearLayout>

    <EditText
        android:id="@+id/et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_round_red_white"
        android:hint="请输入姓名"
        android:singleLine="true"
        android:padding="10dp"
        android:textColor="@color/black" />
</LinearLayout>
