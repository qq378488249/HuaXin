<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="cc.chenghong.huaxin.activity.AddDrugActivity"
    tools:showIn="@layout/activity_add_drug">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="药品名称"

            android:textSize="@dimen/app_text_size_20" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_round_red_white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="10dp"
                android:hint="请选择药品名称"
                android:textColor="@color/black"
                android:textSize="@dimen/app_text_size_20" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="10dp"
                android:background="@drawable/a_0033_" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="购买数量"
            android:textSize="@dimen/app_text_size_20" />

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_round_gray_white"
            android:padding="10dp"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="@dimen/app_text_size_20" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="服用剂量"
                android:textSize="@dimen/app_text_size_20" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1天/次"
                android:textSize="@dimen/app_text_size_20" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_cs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_round_gray_white"
            android:padding="10dp"
            android:text="3"
            android:textColor="@color/black"
            android:textSize="@dimen/app_text_size_20" />

        <LinearLayout
            android:id="@+id/ll_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="服用提醒"
                android:textSize="@dimen/app_text_size_20" />

            <ImageView
                android:id="@+id/iv_switch"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:background="@drawable/selector_iv_xjyy" />
        </LinearLayout>

        <TextView style="@style/tv_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:id="@+id/ll1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="早上"
                android:id="@+id/tv_zs"
                android:textSize="@dimen/app_text_size_20" />
            <TextView
                style="@style/tv_space" />

            <TextView
                android:layout_width="100dp"
                android:id="@+id/tv1a"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_height="match_parent"
                android:background="@drawable/shape_round_gray_white"
                android:text="08:00"
                android:textSize="@dimen/app_text_size_20" />
            <TextView
                style="@style/tv_space" />

            <TextView
                android:layout_width="100dp"
                android:id="@+id/tv1b"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_height="match_parent"
                android:background="@drawable/shape_round_gray_white"
                android:text="1"
                android:textSize="@dimen/app_text_size_20" />
            <TextView
                style="@style/tv_space" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单位"
                android:textSize="@dimen/app_text_size_20" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:id="@+id/ll2"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中午"
                android:id="@+id/tv_zw"
                android:textSize="@dimen/app_text_size_20" />
            <TextView
                style="@style/tv_space" />

            <TextView
                android:layout_width="100dp"
                android:id="@+id/tv2a"
                android:gravity="center"
                android:layout_height="match_parent"
                android:background="@drawable/shape_round_gray_white"
                android:text="13:00"
                android:textColor="@color/black"
                android:textSize="@dimen/app_text_size_20" />
            <TextView
                style="@style/tv_space" />

            <TextView
                android:layout_width="100dp"
                android:textColor="@color/black"
                android:id="@+id/tv2b"
                android:gravity="center"
                android:layout_height="match_parent"
                android:background="@drawable/shape_round_gray_white"
                android:text="1"
                android:textSize="@dimen/app_text_size_20" />
            <TextView
                style="@style/tv_space" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单位"
                android:textSize="@dimen/app_text_size_20" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:id="@+id/ll3"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="晚上"
                android:id="@+id/tv_ws"
                android:textSize="@dimen/app_text_size_20" />
            <TextView
                style="@style/tv_space" />

            <TextView
                android:layout_width="100dp"
                android:id="@+id/tv3a"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_height="match_parent"
                android:background="@drawable/shape_round_gray_white"
                android:text="18:00"
                android:textSize="@dimen/app_text_size_20" />
            <TextView
                style="@style/tv_space" />

            <TextView
                android:layout_width="100dp"
                android:id="@+id/tv3b"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_height="match_parent"
                android:background="@drawable/shape_round_gray_white"
                android:text="1"
                android:textSize="@dimen/app_text_size_20" />
            <TextView
                style="@style/tv_space" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单位"
                android:textSize="@dimen/app_text_size_20" />

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="药品图片"
            android:textSize="@dimen/app_text_size_20" />
        <TextView style="@style/tv_line"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <cc.chenghong.huaxin.view.RoundImageView
            android:layout_width="60dp"
            android:id="@+id/iv"
            android:visibility="gone"
            android:background="@drawable/jh"
            android:layout_height="60dp" />
        <ligth_blue.view.NoScrollGridView
            android:layout_width="match_parent"
            android:id="@+id/gv"
            android:numColumns="4"
            android:verticalSpacing="3dp"
            android:horizontalSpacing="3dp"
            android:layout_height="wrap_content"></ligth_blue.view.NoScrollGridView>
        <View
            style="@style/tv_space"></View>
    </LinearLayout>
</ScrollView>
