<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cc.chenghong.huaxin.activity.InputDrugActivity"
    tools:showIn="@layout/activity_intpu_drug">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/iv_top"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:visibility="gone"
                android:background="@drawable/main_icon_01_1"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/ll_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/shape_round_gray_white"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/iv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="2016-03-10"
                    android:textSize="@dimen/app_text_size_20" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_round_gray_white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp">

                    <TextView
                        style="@style/tv_base"
                        android:layout_gravity="center_vertical"
                        android:text="购买量" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_1"
                        android:text="1"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/shape_round_gray_white"
                        android:gravity="center"
                        android:textSize="@dimen/app_text_size_20" />

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/app_text_size_20" />
                </LinearLayout>

                <TextView style="@style/tv_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp">

                    <TextView
                        style="@style/tv_base"
                        android:layout_gravity="center_vertical"
                        android:text="时间/剂量" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="一天"
                        android:textSize="@dimen/app_text_size_20" />

                    <TextView
                        android:id="@+id/tv_2"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:text="1"
                        android:layout_margin="10dp"
                        android:background="@drawable/shape_round_gray_white"
                        android:gravity="center"
                        android:textSize="@dimen/app_text_size_20" />

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="次"
                        android:textSize="@dimen/app_text_size_20" />
                </LinearLayout>

                <TextView style="@style/tv_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp">

                    <TextView
                        style="@style/tv_base"
                        android:layout_gravity="center_vertical"
                        android:text="上午" />

                    <TextView
                        android:id="@+id/tv_3"
                        android:layout_width="60dp"
                        android:text="8:00"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:background="@drawable/shape_round_gray_white"
                        android:gravity="center"
                        android:textSize="@dimen/app_text_size_20" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_4"
                        android:layout_width="60dp"
                        android:text="1"
                        android:layout_height="40dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/shape_round_gray_white"
                        android:gravity="center"
                        android:textSize="@dimen/app_text_size_20" />

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="单位"
                        android:textSize="@dimen/app_text_size_20" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <TextView style="@style/tv_line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp">

                        <TextView
                            style="@style/tv_base"
                            android:layout_gravity="center_vertical"
                            android:text="下午" />

                        <TextView
                            android:id="@+id/tv_5"
                            android:layout_width="60dp"
                            android:text="13:00"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:background="@drawable/shape_round_gray_white"
                            android:gravity="center"
                            android:textSize="@dimen/app_text_size_20" />

                        <TextView
                           style="@style/tv_space" />

                        <TextView
                            android:id="@+id/tv_6"
                            android:layout_width="60dp"
                            android:text="1"
                            android:layout_height="40dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/shape_round_gray_white"
                            android:gravity="center"
                            android:textSize="@dimen/app_text_size_20" />

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:text="单位"
                            android:textSize="@dimen/app_text_size_20" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_3"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView style="@style/tv_line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp">

                        <TextView
                            style="@style/tv_base"
                            android:layout_gravity="center_vertical"
                            android:text="晚上" />

                        <TextView
                            android:id="@+id/tv_7"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:text="18:00"
                            android:layout_margin="10dp"
                            android:background="@drawable/shape_round_gray_white"
                            android:gravity="center"
                            android:textSize="@dimen/app_text_size_20" />
                        <TextView
                            style="@style/tv_space" />

                        <TextView
                            android:id="@+id/tv_8"
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:text="1"
                            android:layout_margin="10dp"
                            android:background="@drawable/shape_round_gray_white"
                            android:gravity="center"
                            android:textSize="@dimen/app_text_size_20" />

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:text="单位"
                            android:textSize="@dimen/app_text_size_20" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:id="@+id/ll_drug"
                android:gravity="center_vertical"
                android:background="@drawable/shape_round_gray_white"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/selector_pressed_blue"
                    android:layout_height="wrap_content">
                <TextView
                    style="@style/tv_base"
                    android:layout_weight="1"
                    android:text="用药提醒"/>
                <ImageView
                    android:id="@+id/iv_drug"
                    android:layout_width="50dp"
                    android:layout_marginRight="5dp"
                    android:layout_height="30dp"
                    android:background="@drawable/select_record_iv" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:id="@+id/bt"
                android:background="@drawable/shape_round_blue"
                android:gravity="center"
                android:textSize="@dimen/app_text_size_20"
                android:layout_marginBottom="10dp"
                android:textColor="@color/white"
                android:layout_marginTop="0dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:text="确定"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
