<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:showIn="@layout/activity_login"
    tools:context="cc.chenghong.huaxin.activity.LoginActivity">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:id="@+id/ll_bar1"
        android:layout_height="20dp" />
    <FrameLayout
        android:layout_width="match_parent"
        android:background="@drawable/pic01"
        android:layout_height="250dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_gravity="center"
            android:background="@drawable/a_0034_"
            android:layout_height="100dp" />
    </FrameLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="left"
        android:inputType="number"
        android:textSize="@dimen/app_text_size_20"
        android:id="@+id/et"
        android:background="@drawable/shape_round_gray_white"
        android:padding="10dp"
        android:hint="请输入您的手机号"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical"
        android:id="@+id/ll"
        android:background="@drawable/shape_round_gray_white"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            style="@style/tv_base"
            android:id="@+id/tv_shop"
            android:layout_weight="1"
            android:text="请选择门店"/>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="30dp"
            android:background="@drawable/a_0033_"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="快速登录"
        android:id="@+id/tv_submit"
        android:padding="10dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/shape_round_blue"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/iv_treaty"
            android:padding="10dp"
            android:background="@drawable/selector_iv_login"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="你已同意"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_treaty"
            android:textColor="@color/red"
            android:padding="10dp"
            android:text="《力高欣健康服务协议》"/>
    </LinearLayout>

</LinearLayout>
