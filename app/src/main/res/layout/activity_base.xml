<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:id="@+id/ll_bar"
        android:visibility="gone"
        android:background="@color/blue_title"/>
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@color/blue_title"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_pressed_gray"
            android:padding="12dp"
            android:src="@drawable/a_0030_" />

        <TextView
            android:id="@+id/tv_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="标题"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/iv_rigth"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_add"
            android:visibility="gone"
            ></ImageView>

        <TextView
            android:id="@+id/tv_rigth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="标题"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_round_red_white"
            android:textColor="@color/red"
            android:textSize="@dimen/app_text_size_18" />

        <Button
            android:id="@+id/bt_rigth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:visibility="gone"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_round_red_white"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="标题"
            android:textColor="@color/red"
            android:textSize="@dimen/app_text_size_18" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"></LinearLayout>

</LinearLayout>